dotnet_diagnostic.SA1501.severity = none

# SA1649: File name should match first type name (naming convention)
dotnet_diagnostic.SA1649.severity = none

# SA1618: Generic type parameters should be documented (documentation)
dotnet_diagnostic.SA1618.severity = none

# SA1512: Single-line comments should not be followed by blank line (formatting)
dotnet_diagnostic.SA1512.severity = none

